<body>
    <header>
        <div></div>
        <h1 id="first">Machine Book</h1>
        <nav>
            <ul>
                <li><a href="/"><b>Home</b></a></li>
                <li> | </li>
                <li><a href="/editar"><b>Editar</b></a></li>
                <li> | </li>
                <li><a href="/deletar"><b>Deletar</b></a></li>
            </ul>
        </nav>
    </header>
    <main>
        <div id="container">
            <h1 id="first">Adicione um novo livro!</h1>
            <div class="card">
                <div class="titulo">
                    <h1>Título:</h1>
                    <input id="title" type="text" placeholder="Digite o título" name="title">
                </div><br>
                <div class="autor">
                    <h1>Autor:</h1>
                    <input id="author" type="text" placeholder="Digite o nome do autor" name="author">
                </div><br>
                <div class="ano">
                    <h1>Ano de publicação:</h1>
                    <input id="data" type="text" placeholder="Digite o ano da publicação" name="data">
                </div><br>
                <div class="sinopse">
                    <h1>Sinopse:</h1>
                    <input id="details" type="text" placeholder="Digite uma breve sinopse" name="details">
                </div><br>
                <div class="imagem">
                    <h1>Imagem:</h1>
                    <input id="image" type= "url" name="" id="Coloque o link da capa do livro" name="img">
                </div>
            </div>
            <div class="buttom">
                <button id="adicionar">Adicionar</button>
            </div>
        </div>
    </main>
    <footer>
        <b>Todos os diretos reservados a autora Jamile Boffo</b>
    </footer>
</body>
